# ============================================================================
# AI Google Calendar Assistant - Backend Environment Variables
# ============================================================================

# ===== REQUIRED =====
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
OPEN_API_KEY=                    # OpenAI API key (used as OPENAI_API_KEY internally)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===== SERVER CONFIG (Optional) =====
NODE_ENV=development             # development | production | test
PORT=3000
HOST=localhost
BASE_URL=                        # Override base URL (default: http://localhost:3000)
FRONTEND_URL=http://localhost:4000

# ===== AI PROVIDER API KEYS (Optional - for multi-provider support) =====
GOOGLE_API_KEY=                  # For Google Gemini models
ANTHROPIC_API_KEY=               # For Anthropic Claude models

# ===== REDIS =====
REDIS_URL=redis://localhost:6379

# ===== LIVEKIT (Required for Voice Features) =====
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
LIVEKIT_WS_URL=                  # e.g., wss://your-project.livekit.cloud

# ===== LEMONSQUEEZY (for payments) =====
LEMONSQUEEZY_API_KEY=              # Get from: https://app.lemonsqueezy.com/settings/api
LEMONSQUEEZY_STORE_ID=             # Your store ID from dashboard
LEMONSQUEEZY_WEBHOOK_SECRET=       # Webhook signing secret
LEMONSQUEEZY_VARIANT_PRO_MONTHLY=  # Variant ID for Pro monthly
LEMONSQUEEZY_VARIANT_PRO_YEARLY=   # Variant ID for Pro yearly
LEMONSQUEEZY_VARIANT_EXECUTIVE_MONTHLY=
LEMONSQUEEZY_VARIANT_EXECUTIVE_YEARLY=

# ===== INTEGRATIONS =====
TELEGRAM_BOT_ACCESS_TOKEN=
DEV_WHATS_APP_ACCESS_TOKEN=

# ===== EMAIL (Resend) =====
RESEND_API_KEY=
RESEND_WEBHOOK_SECRET=           # Optional, for webhook signature verification
RESEND_FROM_EMAIL=               # Or use onboarding@resend.dev for testing
SUPPORT_EMAIL=
STORE_INBOUND_ATTACHMENTS=false  # Set to "true" to store inbound email attachments

# ===== ATLASSIAN (Optional) =====
JIRA_URL=
CONFLUENCE_URL=

# --- Content Filtering ---
# Optional: Comma-separated list of Jira project keys to limit searches and other operations to.
JIRA_PROJECTS_FILTER=

# --- Cloud Auth (API Tokens) ---
# This MUST be your Atlassian account email, not your username
JIRA_USERNAME=
JIRA_API_TOKEN=
CONFLUENCE_USERNAME=
CONFLUENCE_API_TOKEN=

# ===== TESTING =====
TEST_EMAIL=
