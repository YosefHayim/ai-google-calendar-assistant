# ============================================================================
# AI Google Calendar Assistant - Backend Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# REQUIRED VARIABLES
# ============================================================================

# ----- Supabase -----
# Get these from your Supabase project settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ----- OpenAI -----
# Primary AI provider for the agent system
# Get from: https://platform.openai.com/api-keys
OPEN_API_KEY=sk-your-openai-api-key

# ----- Google OAuth -----
# Required for Google Calendar integration
# Setup: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================================================
# SERVER CONFIGURATION (Optional - has defaults)
# ============================================================================

NODE_ENV=development                    # development | production | test
PORT=3000                               # Server port
HOST=localhost                          # Server host
BASE_URL=http://localhost:3000          # Override backend base URL
FRONTEND_URL=http://localhost:4000      # Frontend URL for redirects/CORS

# ============================================================================
# AI PROVIDERS (Optional - for multi-provider support)
# ============================================================================

# Google Gemini - Alternative AI provider
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# Anthropic Claude - Alternative AI provider
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=

# ============================================================================
# REDIS (Optional - for caching/sessions)
# ============================================================================

REDIS_URL=redis://localhost:6379

# ============================================================================
# LIVEKIT (Required for Voice Features)
# ============================================================================
# Real-time voice agent support
# Get from: https://cloud.livekit.io

LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
LIVEKIT_WS_URL=wss://your-project.livekit.cloud

# ============================================================================
# LEMONSQUEEZY (For Payments/Subscriptions)
# ============================================================================
# Get from: https://app.lemonsqueezy.com/settings/api

LEMONSQUEEZY_API_KEY=
LEMONSQUEEZY_STORE_ID=
LEMONSQUEEZY_WEBHOOK_SECRET=

# ----- Subscription Variant IDs -----
# Create products in LemonSqueezy dashboard and get variant IDs

# Starter Plan
LEMONSQUEEZY_VARIANT_STARTER_MONTHLY=
LEMONSQUEEZY_VARIANT_STARTER_YEARLY=

# Pro Plan
LEMONSQUEEZY_VARIANT_PRO_MONTHLY=
LEMONSQUEEZY_VARIANT_PRO_YEARLY=

# Executive Plan
LEMONSQUEEZY_VARIANT_EXECUTIVE_MONTHLY=
LEMONSQUEEZY_VARIANT_EXECUTIVE_YEARLY=

# Credits/Pay Per Use
LEMONSQUEEZY_VARIANT_CREDITS=

# ============================================================================
# TELEGRAM BOT (Optional)
# ============================================================================
# Get from: https://t.me/BotFather

TELEGRAM_BOT_ACCESS_TOKEN=

# ============================================================================
# WHATSAPP CLOUD API (Optional)
# ============================================================================
# Get from: https://developers.facebook.com/apps

WHATSAPP_PHONE_NUMBER_ID=               # Your WhatsApp Business phone number ID
WHATSAPP_BUSINESS_ACCOUNT_ID=           # Your WhatsApp Business Account ID (WABA)
WHATSAPP_ACCESS_TOKEN=                  # Permanent System User token
WHATSAPP_VERIFY_TOKEN=                  # Custom webhook verification token (you create)
WHATSAPP_APP_SECRET=                    # App secret for webhook signature verification
WHATSAPP_API_VERSION=v22.0              # Meta Graph API version

# ============================================================================
# EMAIL - RESEND (Optional)
# ============================================================================
# Get from: https://resend.com/api-keys

RESEND_API_KEY=
RESEND_WEBHOOK_SECRET=                  # For webhook signature verification
RESEND_FROM_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com
STORE_INBOUND_ATTACHMENTS=false         # Set to "true" to store email attachments

# ============================================================================
# CRON/SCHEDULED TASKS (Optional)
# ============================================================================

CRON_SECRET=                            # Secret for authenticating cron job requests

# ============================================================================
# ATLASSIAN INTEGRATION (Optional)
# ============================================================================

# Jira
JIRA_URL=https://your-org.atlassian.net
JIRA_USERNAME=your-email@company.com    # Must be Atlassian account email
JIRA_API_TOKEN=                         # Get from: https://id.atlassian.com/manage/api-tokens
JIRA_PROJECTS_FILTER=                   # Comma-separated project keys (optional)

# Confluence
CONFLUENCE_URL=https://your-org.atlassian.net/wiki
CONFLUENCE_USERNAME=your-email@company.com
CONFLUENCE_API_TOKEN=

# ============================================================================
# TESTING (Optional)
# ============================================================================

TEST_EMAIL=test@example.com             # Email for running tests
