{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": ["**/*.ts"]
  },
  "formatter": {
    "lineWidth": 80
  },
  "linter": {
    "rules": {
      "style": { "noEnum": "off" },
      "complexity": { "noExcessiveLinesPerFunction": "off" },
      "suspicious": {
        "noConsole": {
          "level": "error",
          "options": { "allow": ["error", "log"] }
        }
      }
    }
  }
}
