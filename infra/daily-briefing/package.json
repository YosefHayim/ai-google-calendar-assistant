{
  "name": "daily-briefing-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda functions for daily briefing email system",
  "main": "src/scheduler.ts",
  "scripts": {
    "build": "esbuild src/scheduler.ts src/sender.ts --bundle --platform=node --target=node20 --outdir=dist --external:@aws-sdk/*",
    "deploy": "sam build && sam deploy",
    "deploy:dev": "sam build && sam deploy --config-env dev",
    "local:scheduler": "sam local invoke SchedulerFunction",
    "local:sender": "sam local invoke EmailSenderFunction"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "googleapis": "^144.0.0",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-sqs": "^3.700.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^22.0.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.0"
  }
}
